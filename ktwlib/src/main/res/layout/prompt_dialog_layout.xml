<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_bg"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_custom_title"
        style="@style/dialog_custom_title_text_style"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="Android App"/>

    <TextView
        android:id="@+id/dialog_custom_content"
        style="@style/dialog_custom_content_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_content_margin_bottom"
        android:layout_marginLeft="@dimen/dialog_content_margin_left"
        android:layout_marginRight="@dimen/dialog_content_margin_right"
        android:layout_marginTop="@dimen/dialog_content_margin_top"
        android:gravity="center"
        android:text="Android App"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dialog_content_margin_left"
        android:layout_marginRight="@dimen/dialog_content_margin_right"
        android:background="@color/line_color"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_custom_yes"
            style="@style/dialog_custom_text_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@android:string/yes"/>
    </LinearLayout>
</LinearLayout>