<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyPopupWindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <item name="android:windowExitAnimation">@anim/pop_hide</item>
    </style>

    <style name="PromptDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="dialog_custom_title_text_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textColor">@color/text_color_property</item>
    </style>

    <style name="dialog_custom_content_text_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/text_color_property</item>
    </style>

    <style name="dialog_custom_text_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@drawable/text_light_blue_click</item>
    </style>

    <style name="divide_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divide_line_height</item>
        <item name="android:background">@drawable/divide_line_color</item>
    </style>
    <!-- 底部按钮 style -->
    <style name="long_button_style_deep">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">43.3dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@drawable/long_btn_bg</item>
        <item name="android:textColor">@drawable/long_btn_txt_color_selector</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="setting_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">43.3dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/listview_bg_middle</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">LineSpinFadeLoaderIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Large">
        <item name="minWidth">72dip</item>
        <item name="maxWidth">72dip</item>
        <item name="minHeight">72dip</item>
        <item name="maxHeight">72dip</item>
        <item name="indicatorName">LineSpinFadeLoaderIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Small">
        <item name="minWidth">36dip</item>
        <item name="maxWidth">36dip</item>
        <item name="minHeight">36dip</item>
        <item name="maxHeight">36dip</item>
        <item name="indicatorName">LineSpinFadeLoaderIndicator</item>
    </style>
</resources>